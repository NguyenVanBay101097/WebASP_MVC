        <div class="col span_2_of_3">
            <div class="contact-form">
                <h2>Contact Us</h2>
                @using(Html.BeginForm("Lienlac","Trangchu",FormMethod.Post))
                {
                    <div>
                        <span><label>Họ tên</label></span>
                        <span>@Html.TextBoxFor(x => x.name, new { @class = "input100", @placeholder = "nhập tên!", @required = true, pattern = @".*\S+.*", @title = "không dùng kí tự trống" })</span>
                    </div>
                    <div>
                        <span><label>E-mail</label></span>
                        <span>@Html.TextBoxFor(x => x.email, new { @required = true, pattern = @"[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$", @title = "nhập gmail" })</span>
                    </div>
                    <div>
                        <span><label>Số điện thoại</label></span>
                        <span>@Html.TextBoxFor(x => x.phone, new { @required = true,pattern = @"0[0-9\s.-]{9,13}", @title = "nhập số điện thoại" })</span>
                    </div>
                    <div>
                        <span><label>Địa chỉ</label></span>
                        <span>@Html.TextBoxFor(x => x.adress, new { @required = true,  pattern = @".*\S+.*", @title = "không để trống" })</span>
                    </div>
                    <div>
                        <span><label>yêu cầu</label></span>
                        <span>@Html.TextAreaFor(x => x.contents, new { @required = true,  pattern = @".*\S+.*", @title = "không để trống" })</span>
                    </div>
                    <div>
                        <span><input type="submit" id="btnguu" value="Gửu" class="myButton"></span>
                    </div>
                }
            </div>
        </div>
