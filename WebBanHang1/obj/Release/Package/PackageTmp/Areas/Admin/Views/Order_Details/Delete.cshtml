@model WebBanHang1.Models.Order_Details

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/Layout_Admin.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Order_Details</h4>
    <hr />
    @using (Html.BeginForm("Delete", "Order_Details", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <input name="id" value="@Model.OrderID" hidden />
        <input name="idPr" value="@Model.ProductID" hidden />
        <dl class="dl-horizontal">

            <dt>
                Tên sản phẩm
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Products.ProductName)
            </dd>

            <dt>
                Giá bán
            </dt>

            <dd>
                @Model.PricePresent.Value.ToString("0,00") VNĐ
            </dd>

            <dt>
                Số lượng
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Quantity)
            </dd>

            <dt>
                Tổng tiền
            </dt>

            <dd>
                @Model.TotalMoney.Value.ToString("0,00") VNĐ

            </dd>

        </dl>

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-pinterest" /> |
            @Html.ActionLink("Quay lại", "Index", new { idOrder = Model.OrderID })

        </div>
    }


</div>
