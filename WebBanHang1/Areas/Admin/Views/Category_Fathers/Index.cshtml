    <table class="table table-striped">
        <tr>
            <th>ID</th>
            <th>
              Tên danh mục
            </th>
            <th>
               Icon
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr><td>
                @Html.DisplayFor(x=>item.CategoryFatherID)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.icon)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.CategoryFatherID }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.CategoryFatherID }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.CategoryFatherID })|
                    @Html.ActionLink("Quản lí Loại", "Index", "Category_Childs", new { idcha = item.CategoryFatherID },null)
                </td>
            </tr>
        }

    </table>
</div>