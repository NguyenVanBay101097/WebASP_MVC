@model WebBanHang1.Models.Orders

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/Layout_Admin.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Orders</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.OrderID)



        <div class="form-group">
            Ngày order
            <div class="col-md-10">
                @Html.EditorFor(model => model.OrderDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.OrderDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Tên Người nhận
            <div class="col-md-10">
                @Html.EditorFor(model => model.RecevierName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RecevierName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Địa chỉ
            <div class="col-md-10">
                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Trạng thái
            <div class="col-md-10">
                <div class="checkbox">
                    <a href="#" id="tt">@(Model.Status ? "Đã giao" : "Đang giao")</a>
                    @Html.EditorFor(model => model.Status, new { htmlAttributes = new {@hidden=true } })
                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <script>
            $("#tt").click(function (e) {
                e.preventDefault();
                $(this).text() == "Đang giao" ? (
                    $("#Status").attr("checked", true),
                    $(this).text('Đã giao'),
                    $("#Tralai").attr("disabled", true).attr("checked",false)
                ) : (
                        $("#Status").attr("checked", false),
                $(this).text("Đang giao"),
                    $("#Tralai").removeAttr("disabled").attr("checked", false)
                    );

            });
        </script>
        <div class="form-group">
            Tổng tiền
            <div class="col-md-10">
                @Html.EditorFor(model => model.TotalMoney, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TotalMoney, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Số điện thoại
            <div class="col-md-10">
                @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Gmail
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Trả lại
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Tralai, new { htmlAttributes = new {@class = "btn " } })
                    @Html.ValidationMessageFor(model => model.Tralai, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="  col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn  btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại", "Index",new{ },new { @class= "btn btn-primary" })
   
</div>
